<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:textColor="#000000"
            android:id="@+id/news_city_multi_title_tv"
            android:text="udgwuifuwefoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/news_city_multi_ll"
            android:layout_below="@+id/news_city_multi_title_tv"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="80dp">
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_below="@+id/news_city_long_title_tv"
                android:layout_marginRight="20dp"
                android:id="@+id/news_city_multi_img"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_marginTop="3dp"
                android:layout_below="@+id/news_city_long_title_tv"
                android:id="@+id/news_city_multi_img_1"
                android:layout_width="0dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_marginTop="3dp"
                android:layout_below="@+id/news_city_long_title_tv"
                android:id="@+id/news_city_multi_img_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <TextView
            android:id="@+id/news_city_multi_from"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_city_multi_ll"
            android:textColor="#979797"
            android:text="来源"/>

        <TextView
            android:id="@+id/news_city_multi_type"
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_city_multi_ll"
            android:textColor="#979797"
            android:layout_alignParentRight="true"
            android:text="类型"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>