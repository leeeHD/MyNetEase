<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:textColor="#000000"
            android:id="@+id/news_city_long_title_tv"
            android:text="udgwuifuwefoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="3dp"
            android:layout_below="@+id/news_city_long_title_tv"
            android:id="@+id/news_city_long_img"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/news_city_long_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_city_long_img"
            android:textColor="#979797"
            android:text="来源"/>

        <TextView
            android:id="@+id/news_city_long_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_city_long_img"
            android:textColor="#979797"
            android:layout_alignParentRight="true"
            android:text="类型"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>